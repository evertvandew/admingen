[Unit]
Description=Start Overzicht Generator server

[Service]
Type=simple
User=ogen
Group=ogen
Environment="REQUESTS_CA_BUNDLE=/etc/ssl/certs/ca-certificates.crt"
ExecStart=/home/ogen/venv/bin/python3 /home/ogen/giftenoverzicht/run giftenoverzicht
WorkingDirectory=/home/ogen/giftenoverzicht
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
