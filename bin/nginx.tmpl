server {
        root /var/www/html;

        # Add index.php to the list if you are using PHP
        index index.html index.htm index.nginx-debian.html;
    server_name www.{{service}} {{service}}; # managed by Certbot


        location / { try_files $uri @{{project}}_application; }
        location @{{project}}_application {
                include uwsgi_params;
                uwsgi_pass unix:/home/{{user}}/var/run/{{project}}.s;
        }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/{{service}}/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/{{service}}/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot


    # Redirect non-https traffic to https.
    if ($scheme != "https") {
        return 301 https://$host$request_uri;
    } # managed by Certbot
}