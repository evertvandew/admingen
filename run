#!/usr/bin/env python3.7
""" Run a specific project """

import sys
import os, os.path

# Add the proper directories to the system path so they can be imported
root = os.path.abspath(os.path.dirname(__file__))
srcdir = root + '/src'
sys.path.append(os.path.join(root, 'projects'))
sys.path.append(srcdir)

print('System path:', '\n'.join(sys.path))

paths = os.environ.get('PYTHONPATH', '').split(os.pathsep)
paths.append(os.pathsep+srcdir)
os.environ['PYTHONPATH'] = os.pathsep.join(paths)

from admingen.project_runner import run_project

run_project(root)
